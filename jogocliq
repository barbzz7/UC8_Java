public class telaJogo extends javax.swing.JFrame {
int pontos = 0;
    int tempo = 30;
    Timer timerMovimento;
    Timer timerTempo;
    Random random = new Random();

    /**
    /**
     * Creates new form telaJogo
     */
    public telaJogo() {
        initComponents();
         setLocationRelativeTo(null); // centraliza
        iniciarJogo();


    }
     void iniciarJogo() {
        pontos = 0;
        tempo = 30;
           lblPontuacao.setText("Pontos: 0");
        lblTempo.setText("Tempo: 30");

         // Movimentando o quadrado a cada 2 segundos (2000 ms)
// cria um Timer que, a cada 2000 ms, chama a função moverQuadrado
    timerMovimento = new Timer(600, e -> moverQuadrado());
    // inicia o timer de movimento ( o quadrado começa a "pular" pela tela (dentro do painel))
    timerMovimento.start();
    // cronômetro regressivo (1 segundo)
    timerTempo = new Timer(800, new ActionListener(){
        @Override
    public void actionPerformed(ActionEvent e){
        tempo --; // diminui 1 segundo do tempo restante 
        // atualiza o rótulo para exibir o novo tempo
        lblTempo.setText("Tempo: "+ tempo);
        // quando chegar a zero
        if(tempo <= 0){
        timerMovimento.stop(); // parar o movimento
        timerTempo.stop(); // para o tempo
        // Mostra uma janela informando o fim do jogo
        javax.swing.JOptionPane.showMessageDialog(
                null,
                "Tempo esgotado! \nPontos: " + pontos,
                "Fim de jogo", // Título da janela
                javax.swing.JOptionPane.INFORMATION_MESSAGE);
        }
   
    }
    });
    timerTempo.start(); // inicia o cronômetro
    } // fim o método iniciarJogo()
    // função que posiciona o quadrado em um ponto aleatório
    void moverQuadrado(){
        //espaço útil horizontal dentro do painel
    int maxX = painelJogo.getWidth() - btnQuadrado.getWidth();
    // a mesma coisa para y (vertical :) )
    int maxY = painelJogo.getHeight() - btnQuadrado.getHeight();
    // Por segurança do quadrado
    if(maxX < 0 || maxY < 0) return;
    // Sorteia com random uma posição x entre 0 e maxX -1
    int x = random.nextInt(Math.max(1, maxY));
    // Sorteia com random uma posição ty entre 0 e maxY -1
    int y = random.nextInt(Math.max(1, maxY));
    // Move o quadrado para a nova posição dentro do painel
    btnQuadrado.setLocation(x, y);
    }
