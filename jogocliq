public class telaJogo extends javax.swing.JFrame {

    //variaveis 
    int pontos = 0;
    int tempo = 30;
    Timer timerMovimento;
    Timer timerTempo;
    Random random = new Random();

    /**
     * Creates new form telaJogo
     */
    public telaJogo() {
        initComponents();
        setLocationRelativeTo(null); //centraliza
        iniciarJogo();
    }

    void iniciarJogo() {
        pontos = 0;
        tempo = 30;
        lblPontuacao.setText("Pontos: 0");
        lblTempo.setText("Tempo: 30");

        timerMovimento = new Timer(2000, e -> moverQuadrado());
        timerMovimento.start();

        //cronometro
        timerTempo = new Timer(1000, new ActionListener(){
           @Override
                public void actionPerformed(ActionEvent e){
                tempo--;
                //atualiza o rotuilo para exibir o novo tyempo
                lblTempo.setText("Tempo: " + tempo);
                if(tempo <= 0){
                timerMovimento.stop();
                timerTempo.stop();
                javax.swing.JOptionPane.showMessageDialog(null,
                "Tempo esgotado! \nPontos: " + pontos,  
                "Fim de jogo", 
                javax.swing.JOptionPane.INFORMATION_MESSAGE);
                }
                
                }
          
    });
         
        timerTempo.start();
        void moverQuadrado(){
        //espaço util horizontal dentro do painel
        int maxX = painelJogo.getWidth() - btnQuadrado.getWidth();
        int maxY = painelJogo.getWidth() - btnQuadrado.getHeight();
        
        
        if(maxX < 0 || maxY < 0) return;
        int x = random.nextInt( Math.max( 1, maxX));
        int y = random.nextInt( Math.max( 1, maxY));
        btnQuadrado.setLocation(x, y);
    }

    }   /**
