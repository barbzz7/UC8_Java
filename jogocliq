    private void btnQuadradoActionPerformed(java.awt.event.ActionEvent evt) {                                            
 pontos++;
 lblPontuacao.setText("Pontos: " + pontos);
moverQuadrado();
   



        
// TODO add your handling code here:
    }                                           

